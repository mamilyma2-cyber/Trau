  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.8/dist/chart.umd.min.js"></script>
  <script>
    // 页面切换功能
    document.addEventListener('DOMContentLoaded', function() {
      // 页面切换
      const pageBtns = document.querySelectorAll('.page-btn, .nav-btn, .back-btn');
      pageBtns.forEach(btn => {
        btn.addEventListener('click', function(e) {
          e.preventDefault();
          
          // 获取目标页面
          let targetPage = this.getAttribute('data-page');
          
          // 对于返回按钮，返回上一页
          if (this.classList.contains('back-btn')) {
            targetPage = 'start-page';
          }
          
          // 如果点击的按钮有指定标签，切换到对应标签
          const targetTab = this.getAttribute('data-tab');
          if (targetTab) {
            switchTabs(targetPage, targetTab);
          }
          
          // 隐藏所有页面，显示目标页面
          document.querySelectorAll('.page').forEach(page => {
            page.classList.remove('active');
          });
          document.getElementById(targetPage).classList.add('active');
          
          // 更新导航激活状态
          document.querySelectorAll('.nav-btn').forEach(navBtn => {
            navBtn.classList.remove('nav-active');
            if (navBtn.getAttribute('data-page') === targetPage) {
              navBtn.classList.add('nav-active');
            }
          });
        });
      });
      
      //  Stil 页面标签切换
      const stilTabs = document.querySelectorAll('.stil-tab');
      stilTabs.forEach(tab => {
        tab.addEventListener('click', function() {
          const targetTab = this.getAttribute('data-tab');
          switchTabs('stil-page', targetTab);
        });
      });
      
      // Plan 页面标签切换
      const planTabs = document.querySelectorAll('.plan-tab');
      planTabs.forEach(tab => {
        tab.addEventListener('click', function() {
          const targetTab = this.getAttribute('data-tab');
          document.querySelectorAll('.plan-tab').forEach(t => {
            t.classList.remove('text-primary', 'border-b-2', 'border-accent');
            t.classList.add('text-text-light', 'hover:text-primary');
          });
          this.classList.remove('text-text-light', 'hover:text-primary');
          this.classList.add('text-primary', 'border-b-2', 'border-accent');
          
          document.querySelectorAll('.plan-content').forEach(content => {
            content.classList.add('hidden');
          });
          document.getElementById(targetTab).classList.remove('hidden');
        });
      });
      
      // Plan 页面子标签切换
      const planSubtabs = document.querySelectorAll('.plan-subtab');
      planSubtabs.forEach(tab => {
        tab.addEventListener('click', function() {
          const targetSubtab = this.getAttribute('data-subtab');
          document.querySelectorAll('.plan-subtab').forEach(t => {
            t.classList.remove('text-primary', 'border-b-2', 'border-accent');
            t.classList.add('text-text-light', 'hover:text-primary');
          });
          this.classList.remove('text-text-light', 'hover:text-primary');
          this.classList.add('text-primary', 'border-b-2', 'border-accent');
          
          // 这里可以添加子标签内容切换逻辑
        });
      });
      
      // Budget 页面标签切换
      const budgetTabs = document.querySelectorAll('.budget-tab');
      budgetTabs.forEach(tab => {
        tab.addEventListener('click', function() {
          const targetTab = this.getAttribute('data-tab');
          document.querySelectorAll('.budget-tab').forEach(t => {
            t.classList.remove('text-primary', 'border-b-2', 'border-accent');
            t.classList.add('text-text-light', 'hover:text-primary');
          });
          this.classList.remove('text-text-light', 'hover:text-primary');
          this.classList.add('text-primary', 'border-b-2', 'border-accent');
          
          // 这里可以添加预算页面内容切换逻辑
        });
      });
      
      // Gäste 页面标签切换
      const gaesteTabs = document.querySelectorAll('.gaeste-tab');
      gaesteTabs.forEach(tab => {
        tab.addEventListener('click', function() {
          const targetTab = this.getAttribute('data-tab');
          document.querySelectorAll('.gaeste-tab').forEach(t => {
            t.classList.remove('text-primary', 'border-b-2', 'border-accent');
            t.classList.add('text-text-light', 'hover:text-primary');
          });
          this.classList.remove('text-text-light', 'hover:text-primary');
          this.classList.add('text-primary', 'border-b-2', 'border-accent');
          
          document.querySelectorAll('.gaeste-content').forEach(content => {
            content.classList.add('hidden');
          });
          document.getElementById(targetTab).classList.remove('hidden');
        });
      });
      
      // 显示提示消息
      function showToast(message) {
        const toast = document.getElementById('toast');
        toast.textContent = message;
        toast.classList.add('show');
        
        setTimeout(() => {
          toast.classList.remove('show');
        }, 3000);
      }
      
      // 切换标签函数
      function switchTabs(pageId, tabId) {
        // 显示目标页面
        document.querySelectorAll('.page').forEach(page => {
          page.classList.remove('active');
        });
        document.getElementById(pageId).classList.add('active');
        
        // 更新导航激活状态
        document.querySelectorAll('.nav-btn').forEach(navBtn => {
          navBtn.classList.remove('nav-active');
          if (navBtn.getAttribute('data-page') === pageId) {
            navBtn.classList.add('nav-active');
          }
        });
        
        // 切换标签内容
        const tabContents = document.querySelectorAll(`#${pageId} .stil-content`);
        tabContents.forEach(content => {
          content.classList.add('hidden');
        });
        document.getElementById(tabId).classList.remove('hidden');
        
        // 更新标签按钮状态
        const tabButtons = document.querySelectorAll(`#${pageId} .stil-tab`);
        tabButtons.forEach(btn => {
          btn.classList.remove('text-primary', 'border-b-2', 'border-accent');
          btn.classList.add('text-text-light', 'hover:text-primary');
          
          if (btn.getAttribute('data-tab') === tabId) {
            btn.classList.remove('text-text-light', 'hover:text-primary');
            btn.classList.add('text-primary', 'border-b-2', 'border-accent');
          }
        });
      }
      
      // AI 按钮点击事件
      const aiButtons = document.querySelectorAll('.btn-ai');
      aiButtons.forEach(btn => {
        btn.addEventListener('click', function() {
          const originalText = this.innerHTML;
          this.innerHTML = '<i class="fa fa-circle-o-notch fa-spin mr-2"></i> Generiere...';
          this.disabled = true;
          
          // 模拟AI生成延迟
          setTimeout(() => {
            this.innerHTML = originalText;
            this.disabled = false;
            showToast('KI-Vorschläge wurden generiert!');
          }, 2000);
        });
      });
      
      // 保存样式按钮
      document.getElementById('save-style-btn').addEventListener('click', function() {
        showToast('Stil wurde gespeichert!');
      });
      
      // 保存布局按钮
      document.getElementById('save-layout-btn').addEventListener('click', function() {
        showToast('Layout wurde gespeichert!');
        
        // 在今日任务列表前添加一个里程碑卡片
        const todayList = document.getElementById('today-list');
        const milestoneCard = document.createElement('div');
        milestoneCard.className = 'bg-success-lighter rounded-xl shadow-sm p-4 border-l-4 border-success border border-border card-hover';
        milestoneCard.innerHTML = `
          <div class="flex items-start">
            <div class="w-6 h-6 rounded-full bg-success/20 flex items-center justify-center mr-3 mt-0.5">
              <i class="fa fa-flag text-success text-xs"></i>
            </div>
            <div class="flex-grow">
              <div class="flex justify-between">
                <h3 class="font-medium">Raum-Layout festgelegt</h3>
                <span class="text-xs bg-success/20 text-success px-2 py-0.5 rounded-full">Neuer Meilenstein</span>
              </div>
              <p class="text-sm text-text-light mt-1">Sie haben das "Offene Layout" für Ihre Hochzeit ausgewählt.</p>
              <div class="flex items-center mt-2">
                <span class="text-xs bg-white text-text-light px-2 py-0.5 rounded-full"><i class="fa fa-calendar-o mr-1"></i> Heute, 14:30</span>
              </div>
            </div>
          </div>
        `;
        
        // 添加到列表顶部
        if (todayList.firstChild) {
          todayList.insertBefore(milestoneCard, todayList.firstChild);
        } else {
          todayList.appendChild(milestoneCard);
        }
      });
      
      // 发送邀请按钮
      document.getElementById('send-invites-btn').addEventListener('click', function() {
        showToast('Einladungen wurden versendet!');
      });
      
      // 自动优先级按钮
      document.getElementById('btn-auto-prio').addEventListener('click', function() {
        const originalText = this.innerHTML;
        this.innerHTML = '<i class="fa fa-circle-o-notch fa-spin mr-1"></i> Verarbeite...';
        this.disabled = true;
        
        setTimeout(() => {
          this.innerHTML = originalText;
          this.disabled = false;
          showToast('Aufgaben wurden neu priorisiert!');
        }, 1500);
      });
      
      // 预算教练按钮
      const coachButtons = document.querySelectorAll('.btn-coach');
      coachButtons.forEach(btn => {
        btn.addEventListener('click', function() {
          const originalText = this.innerHTML;
          this.innerHTML = '<i class="fa fa-circle-o-notch fa-spin mr-1"></i> Analysiere...';
          this.disabled = true;
          
          setTimeout(() => {
            this.innerHTML = originalText;
            this.disabled = false;
            showToast('Neue Budgetvorschläge wurden generiert!');
          }, 2000);
        });
      });
      
      // 导出按钮
      const exportButtons = document.querySelectorAll('.btn-export');
      exportButtons.forEach(btn => {
        btn.addEventListener('click', function() {
          const originalText = this.innerHTML;
          this.innerHTML = '<i class="fa fa-circle-o-notch fa-spin mr-2"></i> Exportiere...';
          this.disabled = true;
          
          setTimeout(() => {
            this.innerHTML = originalText;
            this.disabled = false;
            showToast('Daten wurden exportiert!');
          }, 1500);
        });
      });
      
      // 初始化预算图表
      const ctx = document.getElementById('budgetChart');
      if (ctx) {
        new Chart(ctx, {
          type: 'doughnut',
          data: {
            labels: ['Location', 'Catering', 'Blumen & Deko', 'Kleidung', 'Sonstiges'],
            datasets: [{
              data: [3000, 1800, 500, 700, 2000],
              backgroundColor: [
                '#3a5e5e',
                '#b98c66',
                '#84a39a',
                '#d1c9c0',
                '#b0b8c1'
              ],
              borderWidth: 0,
              hoverOffset: 4
            }]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
              legend: {
                position: 'bottom',
                labels: {
                  boxWidth: 12,
                  padding: 15,
                  font: {
                    size: 11
                  }
                }
              }
            },
            cutout: '70%'
          }
        });
      }
      
      // 倒计时功能
      function updateCountdown() {
        const weddingDate = new Date('2023-08-15');
        const today = new Date();
        const diffTime = weddingDate - today;
        const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
        
        document.getElementById('countdown').textContent = diffDays;
      }
      
      // 初始化倒计时
      updateCountdown();
    });
  </script>
</body>
</html>
